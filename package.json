{
  "name": "webdesk-client",
  "productName": "WebDesk Client",
  "version": "1.0.2",
  "description": "Desktop application for connecting to a web server",
  "license": "MIT",
  "repository": "https://github.com/dxsuporte/webdesk-client",
  "main": "main.js",
  "homepage": "",
  "author": {
    "name": "DX Suporte - Danilo Xavier",
    "email": "dxsuporteti@gmail.com",
    "url": "https://dxsuporte.com.br"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "build-win": "electron-builder --win"
  },
  "build": {
    "appId": "com.dxsuporte.${name}",
    "artifactName": "${productName}-${version}-${os}_${arch}.${ext}",
    "asar": false,
    "buildDependenciesFromSource": true,
    "asarUnpack": "**\\*.{node,dll}",
    "linux": {
      "icon": "./img/favicon.svg",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.bz2",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "./img/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "prettier": "3.2.5"
  }
}
